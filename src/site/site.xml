<project
        name="${project.name}"
        xmlns="http://maven.apache.org/DECORATION/1.7.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.6</version>
    </skin>

    <version position="right" />
    <publishDate position="right" format="yyyy-MM-dd'T'HH:mm:ss.SSSXXX" />

    <body>
        <breadcrumbs>
            <item name="${project.name}" href="index.html" />
        </breadcrumbs>
        <menu ref="reports" />
        <menu name="API リファレンス">
            <item name="KDoc" href="kdoc/${project.name}/index.html" target="_blank" />
            <item name="Javadoc" href="javadoc/index.html" target="_blank" />
            <item name="KDoc (Test)" href="test-kdoc/${project.name}/index.html" target="_blank" />
            <item name="Javadoc (Test)" href="test-javadoc/index.html" target="_blank" />
        </menu>
    </body>

    <custom>
        <fluidoSkin>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <gitHub>
                <projectId>akihyro/robocode-robots</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>orange</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

</project>
